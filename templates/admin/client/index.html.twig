<section class="section pt-5">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-12 col-md-12 col-lg-12">
				<div class="card">
					{% include "shared/notification.html.twig" %}
					<div class="card-header d-inline-flex">
						<h5 class="pt-3">Clients</h5>
						<div class="card-header-right">
							
						</div>
					</div>
					<div class="card-body">
						<div class="table-responsive">
							<table class="table table-hover table w-100" id="dtClient">
								<thead>
									<tr>
										<th>#</th>
										<th>Matricule</th>
										<th>Email</th>
										<th>Prenom</th>
										<th>Nom</th>
										<th>Telephone</th>
										<th>Status</th>
										<th>actions</th>
									</tr>
								</thead>
								<tbody>
									{% for client in clients %}
										<tr>
											<td>{{ loop.index}}</td>
											<td>{{ client.matricule }}</td>
											<td>{{ client.email }}</td>
											<td>{{ client.prenom }}</td>
											<td>{{ client.nom }}</td>
											<td>{{ client.telephone }}</td>
											<td>{{ client.isActive ? '<div class="badge badge-success">active</div>' : '<div class="badge badge-danger">inactive</div>' }}</td>
											<td>
												{# <a class="btn btn-light btn-action" href="{{ path('client_show', {'id': client.id}) }}" data-toggle="tooltip" data-placement="top" title="DÃ©tail">
													<i class="fas fa-folder"></i>
												</a> #}
											</td>
										</tr>
									{% endfor %}

								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
