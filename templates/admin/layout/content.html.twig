{% extends 'base.html.twig' %}

{% block stylesheets %}
	<link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
	{{ encore_entry_link_tags("admin") }}
{% endblock %}

{% block layout %}

	<!-- Loader starts-->
	<div class="loader-wrapper">
		<div class="typewriter">
			<h1>Loading...</h1>
		</div>
	</div>
	<div
		class="page-wrapper">

		<!-- Header Start-->
		{% block header %}
			{% include 'admin/layout/header.html.twig' %}
		{% endblock %}
		<!-- Page Header Ends-->
		<div
			class="page-body-wrapper">
			<!-- Sidebar Start-->
			{% block sidebar %}
				{% include 'admin/layout/sidebar.html.twig' %}
			{% endblock %}
			<!-- Sidebar Start-->

			<!-- content-here -->
			<div
				class="page-body">
				<!-- Container-fluid starts-->
				<div class="container-fluid">
					{% if contenu is defined %}
						{% include contenu %}
					{% endif %}
				</div>
				<!-- Container-fluid Ends-->
			</div>
			<!-- end content -->

			<!-- footer -->
			{% block footer %}
				{% include 'admin/layout/footer.html.twig' %}
			{% endblock %}
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	{{ encore_entry_script_tags('admin') }}
{% endblock %}
