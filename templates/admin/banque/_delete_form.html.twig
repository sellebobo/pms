<form method="post" action="{{ path('banque_delete', {'id': banque.id}) }}" onsubmit="return confirm('Êtes-vous sûr de bien vouloir supprimer cette banque?');" style="display:inline;">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ banque.id) }}">
   <button class="btn btn-danger rounded-0">Supprimer</button>
</form>
