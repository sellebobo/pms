<section class="section pt-5">
	<div class="row justify-content-center">
		<div class="col-12 col-md-6 col-lg-6">
			<div class="card align-items-center">
				<div class="card-header">
					<h5>{{action}}
						Banque</h5>
				</div>
				{{ form_start(form) }}
				<div class="card-body">
					{{ form_row(form.name) }}
				</div>
				<div class="card-footer">
					<button type="submit" class="btn btn-primary btn-pill" data-original-title="" title="">{{ button_label|default('Enregistrer') }}</button>
					<button type="reset" class="btn btn-light btn-pill" data-original-title="" title="">Annuler</button>
				</div>
				{{ form_end(form) }}
			</div>

		</div>
	</div>
</section>
