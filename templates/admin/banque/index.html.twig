<section class="section pt-5">
	<div class="section-body">
		<div class="row justify-content-center">
			<div class="col-12 col-md-12 col-lg-12">
				<div
					class="card">
					{% include "shared/notification.html.twig" %}
					<div class="card-header d-inline-flex">
						<h5 class="pt-3">Banques</h5>
						<div class="card-header-right">
							<a href="{{ path('banque_new') }}" class="btn btn-primary">
								<i class="fa fa-plus text-white"></i>Ajouter une banque</a>
						</div>
					</div>
					<div class="card-body">
						<div class="table-responsive">
							<table class="table table-hover table w-100" id="dtBanque">
								<thead>
									<tr>
										<th>#</th>
										<th>Name</th>
										<th>Status</th>
										<th>actions</th>
									</tr>
								</thead>
								<tbody>
									{% for banque in banques %}
										<tr>
											<td>{{ loop.index}}</td>
											<td>{{ banque.name }}</td>
											<td>{{ banque.status ? '<div class="badge badge-success">active</div>' : '<div class="badge badge-danger">inactive</div>' }}</td>
											<td>
												<div style="display: flex;!important">
													<a href="{{ path('banque_edit', {'id': banque.id}) }}" class="btn btn-info mr-1 rounded-0">
														Modifier
													</a>
													{{ include('admin/banque/_delete_form.html.twig') }}
												</div>
											</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
